<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_balance_transfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cts.mobilebankingdemo.BalanceTransferActivity">

    <TextView
        android:text="Account From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mActFromSpn"
        android:layout_alignStart="@+id/mActFromSpn"
        android:layout_marginTop="55dp"
        android:id="@+id/mAcctFromTxt" />

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mUserTxt3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/mAcctToTxt"
        android:layout_alignEnd="@+id/mAcctToTxt"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mLogoutTxt3"
        android:layout_alignBaseline="@+id/mUserTxt3"
        android:layout_alignBottom="@+id/mUserTxt3"
        android:layout_alignRight="@+id/mbackBtn"
        android:layout_alignEnd="@+id/mbackBtn" />

    <TextView
        android:text="Account To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/mAcctToTxt"
        android:layout_below="@+id/mActFromSpn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mAcctToSpn"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/mAcctToTxt"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mActFromSpn"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/mAcctFromTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/mAmountTxt"
        android:hint="Amount"
        android:layout_below="@+id/mAcctToSpn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mbackBtn"
        android:layout_alignBaseline="@+id/mTransBalBtn"
        android:layout_alignBottom="@+id/mTransBalBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:text="CONFIRM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/mTransBalBtn"
        android:layout_below="@+id/mAmountTxt"
        android:layout_toLeftOf="@+id/mbackBtn"
        android:layout_toStartOf="@+id/mbackBtn"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

</RelativeLayout>
